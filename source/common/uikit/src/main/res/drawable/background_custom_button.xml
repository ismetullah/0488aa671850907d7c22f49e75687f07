<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/colorDark">
        <shape android:shape="rectangle">
            <solid android:color="@color/indigo_900" />
            <corners android:radius="@dimen/rounded_radius" />
        </shape>
    </item>

    <item
        android:id="@+id/colorLight"
        android:bottom="5dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <stroke
                android:width="1dp"
                android:color="@color/grey_700" />
            <corners android:radius="@dimen/rounded_radius" />
        </shape>
    </item>
</layer-list>